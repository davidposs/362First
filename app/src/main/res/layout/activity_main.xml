<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:fillViewport="true"
    android:background="#e9f6ff"
    android:focusable="false"
    android:focusableInTouchMode="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_alignParentStart="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <RelativeLayout
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            >

            <TextClock
                android:id="@+id/textClock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="cursive"
                android:textColor="#000000"
                android:textSize="30sp"
                android:paddingEnd="22dp"
                android:paddingStart="0dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                />

            <TextView
                android:id="@+id/quote"
                android:text=""
                android:textColor="#000000"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:textStyle="italic"
                android:gravity="start"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                />

            <Button
                android:id="@+id/btnOpenStopWatch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="openStopwatch"
                android:text="Stopwatch"
                android:layout_below="@+id/stepcounter"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="107dp" />

            <Button
                android:text="To Do"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="openToDO"
                android:layout_alignBottom="@+id/btnOpenStopWatch"
                android:layout_alignStart="@+id/stepcounter_Textview"
                android:id="@+id/todoButton"
                style="@style/Widget.AppCompat.Button"
                android:elevation="0dp" />

            <Button
                android:id="@+id/btnOpenDiary"
                android:onClick="OpenDiary"
                android:text="Food Diary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/todoButton"
                android:layout_alignStart="@+id/todoButton"
                android:layout_marginTop="27dp" />

            <Button
                android:text = "Alarm Clock"
                android:onClick="openAlarmClock"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/btnOpenDiary"
                android:layout_alignBottom="@+id/btnOpenDiary"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/stepcounter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00"
                android:textAlignment="center"
                android:textSize="24sp"
                android:layout_marginStart="17dp"
                android:layout_below="@+id/quote"
                android:layout_toEndOf="@+id/textClock"
                android:layout_marginTop="35dp" />

            <TextView
                android:id="@+id/stepcounter_Textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Step Counter:"
                android:textSize="20sp"
                android:layout_alignBottom="@+id/stepcounter"
                android:layout_alignParentStart="true" />

            <Button
                android:text = "Weather"
                android:id = "@+id/yourButtonsId"
                android:onClick="openWeather"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/btnOpenStopWatch"
                android:layout_alignBottom="@+id/btnOpenStopWatch"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>
    </ScrollView>


