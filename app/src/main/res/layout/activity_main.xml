<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:background="#ffffff"
    android:fillViewport="true"
    android:focusable="false"
    android:focusableInTouchMode="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextClock
            android:id="@+id/textClock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:fontFamily="cursive"
            android:paddingEnd="22dp"
            android:paddingStart="0dp"
            android:textColor="#000000"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/quote"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:gravity="start"
            android:text=""
            android:textColor="#000000"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/stepcounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/quote"
            android:layout_marginStart="17dp"
            android:layout_marginTop="35dp"
            android:layout_toEndOf="@+id/textClock"
            android:text="00"
            android:textAlignment="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/stepcounter_Textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/stepcounter"
            android:layout_alignParentStart="true"
            android:text="Step Counter:"
            android:textSize="20sp" />

        <!-- **** Buttons  **** !-->

        <Button
            android:id="@+id/todoButton"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/btnOpenStopWatch"
            android:layout_alignStart="@+id/stepcounter_Textview"
            android:elevation="0dp"
            android:onClick="openToDO"
            android:text="To Do" />

        <Button
            android:id="@+id/btnOpenDiary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/todoButton"
            android:layout_below="@+id/todoButton"
            android:layout_marginTop="27dp"
            android:onClick="openDiary"
            android:text="Food Diary" />

        <Button
            android:id="@+id/yourButtonsId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btnOpenStopWatch"
            android:layout_alignBottom="@+id/btnOpenStopWatch"
            android:layout_centerHorizontal="true"
            android:onClick="openWeather"
            android:text="Weather" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/btnOpenDiary"
            android:layout_marginTop="24dp"
            android:onClick="openReflection"
            android:text="Reflection" />

        <ImageButton
            android:id="@+id/btnOpenStopWatch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/btnOpenStopWatch"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:background="@android:color/transparent"
            android:onClick="openStopwatch"
            android:src="@drawable/stopwatch2" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/btnOpenDiary"
            android:layout_marginTop="30dp"
            android:background="@android:color/transparent"
            android:onClick="openAlarmClock"
            android:src="@drawable/alarmclock" />

    </RelativeLayout>
</ScrollView>


